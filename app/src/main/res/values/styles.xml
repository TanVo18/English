<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="MainBtn1">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/MainBtn1</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MainBtn2">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/MainBtn2</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="custom_question_tv">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFCC66</item>
    </style>

    <style name="custom_question_imgView">
        <item name="android:layout_weight">0.3</item>
    </style>

    <style name="quiz_Btn">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="custom_homescreen_tv">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="custom_verb_tv">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/TextColor</item>
    </style>

    <style name="custom_verb_tvSlash">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:textColor">@color/TextColor</item>
    </style>

    <style name="definite_verb_tv">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/TextColor</item>
    </style>

    <style name="definite_verb_ImgView">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="frag_answer_radBtn">
        <item name="android:textColor">@color/frag_answer_textColor</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="intro_activity_btn">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@color/colorRightAnswer</item>
    </style>

    <style name="intro_activity_tv">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorRightAnswer</item>
    </style>

    <style name="answerQuiz_frag_btn">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="result_frag_btn">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/resultFragBtn</item>
    </style>

    <style name="verb_frag_tv">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/definite_frag_DefiniteTextColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="share_frag_tv">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/definite_frag_DefiniteTextColor</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="share_frag_switch">
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="share_frag_btnOpenStore">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/resultFragBtn</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="definite_verb_frag_imgViewSphere">
        <item name="android:layout_weight">1</item>
    </style>

</resources>
