<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/frag_answer_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/custom_question_MarginTop"
        android:id="@+id/linearLayout"
        android:background="@drawable/rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv"
            style="@style/custom_question_tv"
            android:layout_width="@dimen/custom_question_width"
            android:layout_height="match_parent"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/imgView"
            style="@style/custom_question_imgView"
            android:layout_width="@dimen/custom_question_width"
            android:layout_height="@dimen/custom_question_imgViewHeight"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </LinearLayout>

</RelativeLayout>