<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_verb_itemLayoutHeight"
    android:layout_marginTop="@dimen/custom_verb_layoutMarginTop"
    android:background="@drawable/selector_row">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/custom_verb_LinearMarginTop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvVerb1"
            style="@style/custom_verb_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            style="@style/custom_verb_tvSlash"
            android:layout_width="@dimen/custom_verb_tvSlashWidth"
            android:layout_height="wrap_content"
            android:text="@string/custom_verb_slash" />

        <TextView
            android:id="@+id/tvVerb2"
            style="@style/custom_verb_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            style="@style/custom_verb_tvSlash"
            android:layout_width="@dimen/custom_verb_tvSlashWidth"
            android:layout_height="wrap_content"
            android:text="@string/custom_verb_slash" />

        <TextView
            android:id="@+id/tvVerb3"
            style="@style/custom_verb_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>