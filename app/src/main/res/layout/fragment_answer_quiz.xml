<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frag_answer_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.izienglish.fragments.AnswerQuizFragment">

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/frag_answer_textColor"
        android:textSize="@dimen/answerQuiz_Frag_textSize" />

    <RadioGroup
        android:id="@+id/radGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/answerQuiz_Frag_GroupMarginTop">

        <RadioButton
            android:id="@+id/radA"
            style="@style/frag_answer_radBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/answerQuiz_Frag_radBtnMarginTop" />

        <RadioButton
            android:id="@+id/radB"
            style="@style/frag_answer_radBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/answerQuiz_Frag_radBtnMarginTop" />

        <RadioButton
            android:id="@+id/radC"
            style="@style/frag_answer_radBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/answerQuiz_Frag_radBtnMarginTop" />

        <RadioButton
            android:id="@+id/radD"
            style="@style/frag_answer_radBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/answerQuiz_Frag_radBtnMarginTop" />
    </RadioGroup>

    <info.hoang8f.widget.FButton
        android:id="@+id/btnFinish"
        style="@style/answerQuiz_frag_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        fbutton:buttonColor="@color/Main_TabStrip_Color"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@android:color/black"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        android:text="@string/AnswerQuiz_frag_btn"
        />
</RelativeLayout>
